{
  "name": "lightiptv",
  "version": "1.0.0",
  "description": "Lightweight web IPTV viewer for M3U + XMLTV sources",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "tsx app/index.ts",
    "debug": "node --inspect ./node_modules/tsx/dist/cli.mjs app/index.ts",
    "dev": "nodemon",
    "build": "tsc && rm -rf dist/public dist/data && mkdir -p dist/public dist/data dist/data/channels dist/data/logs && cp -R app/public/* dist/public/ && rm -rf dist/public/cached && mkdir -p dist/public/cached"
  },
  "keywords": [
    "iptv",
    "m3u",
    "express",
    "hls",
    "ffmpeg"
  ],
  "author": "astevani",
  "license": "ISC",
  "dependencies": {
    "async-mutex": "^0.5.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^1.4.36",
    "@types/xml2js": "^0.4.14",
    "nodemon": "^3.0.2",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4",
    "ws": "^8.19.0"
  },
  "nodemonConfig": {
    "watch": [
      "app"
    ],
    "ext": "ts",
    "ignore": [
      "app/public/**"
    ],
    "exec": "tsx ./app/index.ts"
  }
}
