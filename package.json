{
  "name": "iptv-viewer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "npm run dev:backend & npm run dev:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "cd backend && npm start",
    "docker:build": "docker build -t astevani/lightiptv:$(node -p \"require('./package.json').version\") -t astevani/lightiptv:latest .",
    "docker:push": "docker push astevani/lightiptv --all-tags",
    "docker:release": "npm run docker:build && npm run docker:push"
  }
}
