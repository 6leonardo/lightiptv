{
  "name": "lightiptv",
  "version": "1.0.0",
  "description": "Lightweight web IPTV viewer for Threadfin",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t astevani/lightiptv:$(node -p \"require('./package.json').version\") -t astevani/lightiptv:latest .",
    "docker:push": "docker push astevani/lightiptv --all-tags",
    "docker:release": "npm run docker:build && npm run docker:push"
  },
  "keywords": ["iptv", "m3u", "express", "threadfin", "hls", "ffmpeg"],
  "author": "astevani",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
