{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch ts-node (ESM)",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect-brk",
        "--loader",
        "ts-node/esm",
        "--enable-source-maps"
      ],
      "program": "${workspaceFolder}/app/index.ts",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to ts-node (ESM)",
      "port": 9229,
      "address": "127.0.0.1",
      "restart": true,
      "protocol": "inspector",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
